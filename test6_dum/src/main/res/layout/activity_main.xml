<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/image" />
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="edit Text"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/hanga185,
        hanga185@naver.com, 010-1234-5678"
        android:autoLink="all"
        android:textSize="20sp" />

    <!--   sp : 해상도에 맞춰서 알아서 해줌     -->

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#699A6B"
        android:text="Image  On / Off"
        android:fontFamily="@font/blackhansans"
        android:padding="20dp"
        android:textColor="#A7C5A8"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#699A6B"
        android:text="Image  On"
        android:padding="20dp"
        android:textColor="#A7C5A8"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#699A6B"
        android:text="회원가입 🌵"
        android:padding="20dp"
        android:textColor="#A7C5A8"
        android:textSize="20sp" />
    



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="텍스트1"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="텍스트2"
            android:textSize="15sp" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="텍스트3"
        android:textSize="15sp" />

</LinearLayout>
